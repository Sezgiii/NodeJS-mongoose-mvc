extends ../layouts/main-layout.pug

block styles 
        link(rel="stylesheet" href="/style.css")

block content 
      if errorMessage 
           div.alert.alert-danger.col-sm-7 !{errorMessage}
      form(action="/register" method="POST")
                  input(type='hidden' name='_csrf' value=`${csrfToken}`) 
                  .form-group.row
                          label(for="name").col-sm-2.col-form-label Name
                          .col-sm-5
                            input(type="text" name="name").form-control#name

                  .form-group.row
                          label(for="email").col-sm-2.col-form-label E-mail
                          .col-sm-5
                            input(type="text" name="email").form-control#email
               
                  .form-group.row
                          label(for="password").col-sm-2.col-form-label Password
                          .col-sm-5
                            input(type="password" name="password").form-control#password                     

                  .form-group.row
                          .col-sm-5.offset-2
                            input(type="submit" value="Submit").btn.btn-primary
