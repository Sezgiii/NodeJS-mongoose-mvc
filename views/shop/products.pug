extends ../layouts/main-layout.pug

block styles 
        link(rel="stylesheet" href="/style.css")

include ../mixins/createProduct.pug
block content

     .row 
        .col-md-3 
            include ../includes/menu.pug
        .col-md-9    
                .row
                        if products.length > 0
                                each product in products
                                        +createProduct(product)
                        else
                                h1 No Products