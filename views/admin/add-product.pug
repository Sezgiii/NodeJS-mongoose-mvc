extends ../layouts/main-layout.pug

block styles 
        link(rel="stylesheet" href="/style.css")

block content 
      if errorMessage 
           div.alert.alert-danger.col-sm-7 !{errorMessage}
      form(action="/admin/add-product" method="POST" enctype='multipart/form-data')
                  input(type='hidden' name='_csrf' value=`${csrfToken}`) 
                  .form-group.row
                          label(for="name").col-sm-2.col-form-label Product Name
                          .col-sm-10
                            input(type="text" name="name").form-control#name
                  .form-group.row
                          label(for="price").col-sm-2.col-form-label Price
                          .col-sm-10
                            input(type="text" name="price" ).form-control#price
                  .form-group.row
                          label(for="image").col-sm-2.col-form-label Image
                          .col-sm-10
                            input(type="file" name="image").form-control-file#image 
               
                  .form-group.row
                          label(for="description").col-sm-2.col-form-label Description
                          .col-sm-10
                            textarea.form-control(id="editor" name="description" cols="30" rows="10")           

                  .form-group.row
                          .col-sm-10.offset-2
                            input(type="submit" value="Save Product").btn.btn-primary 

block script 
    script(src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js")
    script(src="/js/script.js")

